{
  "name": "matreshka-arbitrage-system",
  "version": "2.0.0",
  "description": "Advanced Multi-Exchange Arbitrage System - Production Ready",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:prod": "NODE_ENV=production tsc --build --verbose",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:debug": "ts-node-dev --inspect --respawn --transpile-only src/index.ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts --fix",
    "lint:check": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "monitor": "npm run dev -- --mode=monitor",
    "execute": "npm run dev -- --mode=execute",
    "demo": "DEMO_MODE=true npm run dev -- --mode=monitor",
    "docker:build": "docker build -t matreshka-arbitrage:latest .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "health": "node dist/index.js --health-check",
    "postinstall": "npm run build"
  },
  "keywords": [
    "arbitrage",
    "cryptocurrency",
    "trading",
    "hummingbot",
    "multi-exchange"
  ],
  "author": "BRICS.trading Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.7.7",
    "ws": "^8.18.0",
    "node-fetch": "^3.3.2",
    "lodash": "^4.17.21",
    "dayjs": "^1.11.13",
    "uuid": "^10.0.0",
    "winston": "^3.14.2",
    "redis": "^4.7.0",
    "express": "^4.19.2",
    "socket.io": "^4.8.0",
    "dotenv": "^16.4.5",
    "joi": "^17.13.3",
    "mathjs": "^13.1.1",
    "bignumber.js": "^9.1.2",
    "ccxt": "^4.4.18",
    "node-cron": "^3.0.3",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.4.0",
    "pino": "^9.4.0",
    "pino-pretty": "^11.2.2",
    "node-cache": "^5.1.2",
    "ioredis": "^5.4.1",
    "pm2": "^5.4.2"
  },
  "devDependencies": {
    "@types/node": "^22.7.4",
    "@types/express": "^4.17.21",
    "@types/lodash": "^4.17.7",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.12",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/jest": "^29.5.13",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "typescript": "^5.6.2",
    "ts-node-dev": "^2.0.0",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "supertest": "^7.0.0",
    "@types/supertest": "^6.0.2",
    "nodemon": "^3.1.7",
    "rimraf": "^6.0.1",
    "concurrently": "^9.0.1"
  },
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/brics-trading/matreshka.git"
  },
  "bugs": {
    "url": "https://github.com/brics-trading/matreshka/issues"
  },
  "homepage": "https://github.com/brics-trading/matreshka#readme"
}
