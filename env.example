# Matreshka Configuration
# Copy this file to .env and fill in your actual credentials

# Exchange API Keys - WhiteBit
WHITEBIT_API_KEY=your_whitebit_api_key_here
WHITEBIT_API_SECRET=your_whitebit_secret_here

# Exchange API Keys - Binance
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_secret_here

# Exchange API Keys - Binance Futures
BINANCE_FUTURES_API_KEY=your_binance_futures_api_key_here
BINANCE_FUTURES_API_SECRET=your_binance_futures_secret_here

# Exchange API Keys - OKX
OKX_API_KEY=your_okx_api_key_here
OKX_API_SECRET=your_okx_secret_here
OKX_PASSPHRASE=your_okx_passphrase_here

# Hummingbot Configuration
HUMMINGBOT_HOST=localhost
HUMMINGBOT_PORT=8080
HUMMINGBOT_API_KEY=your_hummingbot_api_key

# Web Interface
WEB_PORT=3001

# Development/Testing
NODE_ENV=development
LOG_LEVEL=info

# Risk Management
MAX_TOTAL_EXPOSURE_USD=100000
MAX_LOSS_PER_DAY_USD=5000
EMERGENCY_EXIT_ENABLED=true

# Monitoring
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id
DISCORD_WEBHOOK_URL=your_discord_webhook_url

# Database (Optional - for persistence)
REDIS_URL=redis://localhost:6379
POSTGRES_URL=postgresql://username:password@localhost:5432/matreshka
